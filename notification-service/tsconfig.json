{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2022",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,                                   
    "skipLibCheck": true,                         
    "noImplicitReturns": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/*//.ts",
    "tests/*//.ts",
    "app.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts"
  ],
}